- var permanent_bool = "true"
for a in class1
 if a['permanent'] == "1"
  li.assignment_container(style="width: 100%") 
   div.input-group
    h3 #{a["name"]} 
    input(type="checkbox", class="toggle_permanent", value="Permanent", id="Permanent" checked=permanent_bool)
    label(for="Permanent", class="toggle_permanent") Permanent
   textarea(class="notes" id="assignment_notes" name="assignment_notes") #{a["notes"]}
 else
  li.assignment_container(style="width: 100%") 
   div.input-group
    h3 #{a["name"]} 
    input(type="checkbox", class="toggle_permanent", value="Permanent", id="Permanent")
    label(for="Permanent", class="toggle_permanent") Permanent
   textarea(class="notes" id="assignment_notes" name="assignment_notes") #{a["notes"]}
